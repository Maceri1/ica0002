global:
  scrape_interval: 15s

scrape_configs:
  - job_name: prometheus
    metrics_path: '/prometheus/metrics'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: linux
    static_configs:
      - targets: 
        {% for host in groups['all'] %}
        - {{ host }}:9100
        {% endfor %}

  - job_name: backup
    static_configs:
      - targets: ['backup.hannibal.io:9111']

  - job_name: mysql
    static_configs:
      - targets: 
        {% for host in groups['db_servers'] %}
        - {{ host }}:9104
        {% endfor %}

  - job_name: bind
    static_configs:
      - targets: 
        {% for host in groups['dns_servers'] %}
        - {{ host }}:9119
        {% endfor %}

  - job_name: influx_stats_exporter
    static_configs:
      - targets: 
        {% for host in groups['influxdb'] %}
        - {{ host }}:9424
        {% endfor %}

  - job_name: nginx
    static_configs:
      - targets: 
        {% for host in groups['web_servers'] %}
        - {{ host }}:9113
        {% endfor %}